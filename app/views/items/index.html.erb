<h1>Items:</h1>
  <% @items.each do |item| %>
    <section class=<%= item.name %>>
      <h3><%= item.name %></h3>
      <ul>
        <li>Price: <%= item.price %></li>
        <li>Supermarket: <%= item.supermarket.name %></li>
        <li>Purchases: <%= CustomersItem.count_purchases(item) %></li>
      </ul>
    </section>
  <% end %>