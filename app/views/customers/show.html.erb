<h1><%= @customer.name %></h1>
<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Supermarket</th>
    </tr>
  </thead>
  <tbody>
    <% @customer.items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.supermarket.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Add Item:</h1>
<%= form_with url: "/customers/#{@customer.id}/items", method: :post, data: {turbo: false} do |f| %>
<%= f.label :item_id, 'Item ID:' %>
  <%= f.text_field :item_id %>
  <%= f.submit "Add Item" %>
<% end %>